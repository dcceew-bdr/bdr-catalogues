<https://linked.data.gov.au/def/bdr-pr/proj/validator>
    a owl:Ontology ;
    owl:versionIRI :1.0 ;
    owl:versionInfo "1.0 First version" ;
    schema:creator <https://linked.data.gov.au/org/dcceew> ;
    schema:dateCreated "2025-08-01"^^xsd:date ;
    schema:dateModified "2025-08-15"^^xsd:date ;
    schema:definition "SHACL validator for catalogues used by the Biodiversity Data Repository"@en ;
    schema:name "BDR Catalogues Validator"@en ;
    schema:publisher <https://linked.data.gov.au/org/dcceew> ;
.

:ns-01
    a sh:NodeShape ;
    sh:targetClass schema:DataCatalog ;
    sh:property
        :p-01 ,
        :p-02 ,
        :p-03 ,
        :p-04 ,
        :item-classes ;
.

:p-01
    a sh:PropertyShape ;
    sh:path schema:name ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:datatype xsd:string ;
.

:p-02
    a sh:PropertyShape ;
    sh:path schema:description ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:datatype xsd:string ;
.

:p-03
    a sh:PropertyShape ;
    sh:path schema:dateCreated ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:datatype xsd:date ;
.

:p-04
    a sh:PropertyShape ;
    sh:path schema:dateModified ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:datatype xsd:date ;
.

:item-classes
    a sh:PropertyShape ;
    sh:path schema:hasPart ;
    #sh:or (
    #    [ sh:class schema:DataCatalog ]
    #    [ sh:class schema:Dataset ]
    #    [ sh:class owl:Ontology ]
    #) ;
.